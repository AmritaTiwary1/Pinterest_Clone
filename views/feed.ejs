<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white ">
    <div class="cards flex flex-wrap gap-10"> 
        <% posts.forEach(function(post){ %>
            <div class="card w-32" >
                <div class="w-full h-40 bg-sky-200 rounded-lg">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%=post.image%>" alt="Image">
                </div>
                <h2 class="mt-2 text-sm "><%= post.title %></h2>
                <h4 class="mt-2 text-sm "><%= post.description %></h4>
                <h6 class="text-sm opacity-500"><%= post.user.name %></h6>
            </div>
       <% }) %>
     
    </div>
</div>

 
<% include ./partials/footer.ejs %>
